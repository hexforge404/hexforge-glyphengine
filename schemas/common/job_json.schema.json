{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hexforgelabs.com/schemas/job_json.schema.json",
  "title": "HexForge GlyphEngine job.json (Surface v1)",
  "type": "object",
  "required": [
    "job_id",
    "service",
    "version",
    "status",
    "created_at",
    "updated_at",
    "public_base_url",
    "output_dir",
    "artifacts",
    "params"
  ],
  "properties": {
    "job_id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "service": { "type": "string", "const": "hexforge-glyphengine" },
    "version": { "type": "string", "const": "v1" },
    "status": {
      "type": "string",
      "enum": ["queued", "running", "complete", "failed"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },
    "public_base_url": {
      "type": "string",
      "pattern": "^/assets/surface(/.*)?$"
    },
    "output_dir": { "type": "string", "minLength": 1 },
    "error": {
      "type": ["object", "null"],
      "required": ["message"],
      "properties": {
        "message": { "type": "string" },
        "code": { "type": ["string", "null"] },
        "detail": { "type": ["string", "null"] },
        "missing": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "artifacts": {
      "type": "object",
      "required": ["job_json", "previews", "textures", "models"],
      "properties": {
        "job_json": { "type": "string", "pattern": "^/assets/surface/.*" },
        "previews": {
          "type": "object",
          "required": ["hero", "iso", "top", "side"],
          "properties": {
            "hero": { "type": "string", "pattern": "^/assets/surface/.*" },
            "iso": { "type": "string", "pattern": "^/assets/surface/.*" },
            "top": { "type": "string", "pattern": "^/assets/surface/.*" },
            "side": { "type": "string", "pattern": "^/assets/surface/.*" }
          },
          "additionalProperties": false
        },
        "textures": {
          "type": "object",
          "required": ["texture_png", "heightmap_png"],
          "properties": {
            "texture_png": { "type": "string", "pattern": "^/assets/surface/.*" },
            "heightmap_png": { "type": "string", "pattern": "^/assets/surface/.*" }
          },
          "additionalProperties": false
        },
        "models": {
          "type": "object",
          "properties": {
            "enclosure_stl": { "type": "string", "pattern": "^/assets/surface/.*" },
            "enclosure_glb": { "type": ["string", "null"], "pattern": "^/assets/surface/.*" },
            "pi4b_case_base": { "type": "string", "pattern": "^/assets/surface/.*" },
            "pi4b_case_lid": { "type": "string", "pattern": "^/assets/surface/.*" },
            "pi4b_case_panel": { "type": "string", "pattern": "^/assets/surface/.*" },
            "board_case_base": { "type": "string", "pattern": "^/assets/surface/.*" },
            "board_case_lid": { "type": "string", "pattern": "^/assets/surface/.*" },
            "board_case_panel": { "type": "string", "pattern": "^/assets/surface/.*" }
          },
          "additionalProperties": false,
          "anyOf": [
            { "required": ["enclosure_stl"] },
            { "required": ["pi4b_case_base", "pi4b_case_lid"] },
            { "required": ["board_case_base", "board_case_lid"] }
          ]
        }
      },
      "additionalProperties": false
    },
    "params": {
      "type": "object",
      "description": "Engine inputs. Accepts arbitrary keys for MVP.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "status": { "const": "failed" } } },
      "then": {
        "required": ["error"],
        "properties": { "error": { "type": "object" } }
      },
      "else": {
        "if": { "properties": { "status": { "const": "complete" } } },
        "then": {
          "properties": { "error": { "type": "null" } }
        }
      }
    },
    {
      "if": { "properties": { "status": { "const": "complete" } } },
      "then": { "required": ["started_at", "finished_at"] }
    },
    {
      "if": { "properties": { "status": { "const": "failed" } } },
      "then": { "required": ["started_at", "finished_at"] }
    },
    {
      "if": { "properties": { "status": { "const": "running" } } },
      "then": {
        "required": ["started_at"],
        "properties": { "finished_at": false }
      }
    },
    {
      "if": { "properties": { "status": { "const": "queued" } } },
      "then": { "properties": { "started_at": false, "finished_at": false } }
    }
  ]
}
